name: configure ssh and run ansible
on:
  workflow_dispatch:

jobs:
  configure-run:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4
      
      - name: configure ssh
        run: |
        mkdir ~/.ssh
        echo ${{ secrets.SSH_KEY }} > ~/.ssh/cicd
        chmod 644 ~/.ssh/cicd
      
      - name: Run Ansible
        run: ansible-playbook -i ansible/hosts ansible/setup-server.yaml
